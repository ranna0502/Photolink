<div class='container-field px-5 px-sm-0'>
  <div class="row">
    <div class='col-md-3 guide-content left'>
      <!--infoの部分テンプレート引用-->
      <%= render 'guide', user: @user, activity_point: @activity_point %>
    </div>
    <div class='col-md-6 offset-1 profile-edit main-content'>
      <h4 class=" subtitle">MYPAGE EDIT</h4>
      <%= form_with model: @user, local:true do |f| %>
        <!--errorsの部分テンプレート引用-->
        <%= render "public/shared/error_messages", resource: @user %>

        <div class="form-group row mb-5 mt-4 ml-4">
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group row mb-4 ml-4">
          <div class="col-md-3"><%= f.label :ニックネーム %></div>
          <div class="col-md-8"><%= f.text_field :nickname, class: "form-control nickname" %></div>
        </div>
        <div class="form-group row mb-4 ml-4">
          <div class="col-md-3"><%= f.label :メールアドレス %></div>
          <div class="col-md-8"><%= f.text_field :email, class: "form-control email" %></div>
        </div>
        <div class="form-group row mb-4 ml-4">
          <div class="col-md-3"><%= f.label :自己紹介 %></div>
          <div class="col-md-8"><%= f.text_area :introduction, class: "profile-text_area form-control introduction" %></div>
        </div>
        <div  class="form-group d-flex">
          <div class="col-md-3 offset-md-9">
            <%= f.submit "Update", class: 'button update' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


