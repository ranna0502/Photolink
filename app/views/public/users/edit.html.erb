<div><h1>マイページの編集</h1></div>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <!--infoの部分テンプレート引用-->
      <%= render 'guide', user: @user %>
    </div>
    <div class='col-md-5'>
      <h6>変更はこちらから</h6>
      <%= form_with model: @user, local:true do |f| %>
        <!--errorsの部分テンプレート引用-->
        <%= render 'layouts/errors', obj: @user %>

        <div class="form-group">
          <%= f.label :プロフィール写真 %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :名前（姓） %>
          <%= f.text_field :last_name, class: "form-control last_name" %>
        </div>
        <div class="form-group">
          <%= f.label :名前（名） %>
          <%= f.text_field :first_name, class: "form-control first_name" %>
        </div>
        <div class="form-group">
          <%= f.label :ニックネーム %>
          <%= f.text_field :nickname, class: "form-control nickname" %>
        </div>
        <div class="form-group">
          <%= f.label :自己紹介 %>
          <%= f.text_field :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.text_area :email, class: "form-control email" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新する", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<!--ゲストユーザーの場合、編集ボタンを表示しない-->
<% if @user.nickname != "guestuser" %>
<div class='row'>
  <%= link_to '',edit_user_path(@user),class: "btn btn-outline-secondary" %>
</div>
<% end %>