<div class="text-center">
  <%= image_tag @user.get_profile_image, size:"100x100" %>
</div>
<div class="text-center" id="user-description">
  <%= @user.nickname %>
  <% if user_signed_in? && @user != current_user %>
    <div id="follow_form">
    <% if current_user.following?(@user) %>
        <div id="liked" class="btn btn-default">依頼済み</div>
    <% else %>
      <%= render "follow" %>
    <% end %>
    </div>
  <% end %>
  <br>
    <%= @user.introduction %>
  </br>
</div>