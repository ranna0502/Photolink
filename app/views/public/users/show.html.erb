

<div class='container px-5 px-sm-0'>
  <div class="row">
    <div class="col">
      <h2 class="text-center border-bottom border-dark py-3 mb-5">Mypage</h2>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-4'>
      <!--infoの部分テンプレート引用-->
      <%= render 'guide', user: @user %>
    </div>
    <div class='col-md-8'>
        <div>
          名前（姓）：<%= @user.last_name %>
        </div>
        <div>
          名前（名）：<%= @user.first_name %>
        </div>
        <div>
          ニックネーム：<%= @user.nickname %>
        </div>
        <div>
          自己紹介：<%= @user.introduction %>
        </div>

        <%= link_to '編集する', edit_user_path(@user), class: "btn btn-sm btn-success" %>
        <%= link_to "案内へ", users_info_path %>
    </div>
  </div>
</div>