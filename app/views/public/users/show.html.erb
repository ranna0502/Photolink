<%= link_to "案内へ", users_info_path %>

<div><h1>会員情報</h1></div>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <!--infoの部分テンプレート引用-->
      <%= render 'guide', user: @user %>

      <h6>会員情報</h6>

        <div>
          名前（姓）：<%= @user.last_name %>
        </div>
        <div>
          名前（名）：<%= @user.first_name %>
        </div>
        <div>
          ニックネーム：<%= @user.nickname %>
        </div>
        <div>
          自己紹介：<%= @user.introduction %>
        </div>

        <%= link_to '編集する', edit_user_path(@user), class: "btn btn-sm btn-success" %>

    </div>
  </div>
</div>